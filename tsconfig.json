{
    "compilerOptions": {
        "module": "ES6",
        "moduleResolution": "Node",
        "target": "ES6",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitOverride": false,
        "downlevelIteration": true, // support es5 compilation
        "baseUrl": "src",
        "paths": {
            "SE": [
                "SnowballEngine/SnowballEngine.ts"
            ],
            "Config": [
                "../SnowballEngineConfig.json"
            ],
            "UI/*": [
                "SnowballEngine/UI/*"
            ],
            "Utility/*": [
                "SnowballEngine/Utilities/*"
            ],
            "Input/*": [
                "SnowballEngine/Input/*"
            ],
            "Assets/*": [
                "SnowballEngine/Assets/*"
            ],
            "Audio/*": [
                "SnowballEngine/Audio/*"
            ],
            "GameObject/*": [
                "SnowballEngine/GameObject/*"
            ]
        }
    }
}